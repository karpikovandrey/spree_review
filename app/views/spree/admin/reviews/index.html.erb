<% content_for :page_title do %>
    <%= plural_resource_name(Spree::Review) %>
<% end %>

<%= render 'spree/admin/shared/index_table_options', collection: @reviews %>

<% if @reviews.any? %>
    <table class="table" id="listing_orders" data-hook>
        <thead>
        <tr data-hook="admin_orders_index_headers">
            <th><%= Spree.t('activerecord.attributes.spree/review.created_at') %></th>
            <th><%= Spree.t('activerecord.attributes.spree/review.title') %></th>
            <th><%= Spree.t('activerecord.attributes.spree/review.rating') %></th>
            <th><%= Spree.t('activerecord.attributes.spree/review.approved') %></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% @reviews.each do |review| %>
        <tr class="<%= cycle('odd', 'even') %>">
            <td><%= review.title %></td>
            <td><%= review.title %></td>
            <td><%= review.rating %></td>
            <td><%= review.approved ? Spree.t(:say_yes) : Spree.t(:say_no) %></td>
            <td class='actions actions-1'>
                <%= link_to_edit_url edit_admin_review_path(review), title: "admin_edit_#{dom_id(review)}", no_text: true %>
            </td>
        </tr>
        <% end %>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-info no-objects-found">
        <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Review)) %>
    </div>
<% end %>

<%= render 'spree/admin/shared/index_table_options', collection: @reviews, simple: true %>
